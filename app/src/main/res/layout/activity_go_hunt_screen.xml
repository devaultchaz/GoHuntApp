<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="chaz.org.myapplication.GoHuntScreen"
                android:background="@drawable/realtree">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/grouppicture"
            android:layout_margin="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout12"
        android:id="@+id/linearLayout13">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button8"
            android:onClick="onClick"
            android:layout_margin="3dp"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Go Hunt"
            android:id="@+id/button9"
            android:layout_margin="3dp"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/button10"
            android:onClick="onClickMap"
            android:layout_margin="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout12"
        android:layout_toEndOf="@+id/linearLayout12"
        android:layout_alignBottom="@+id/linearLayout12"
        android:weightSum="1"
        android:id="@+id/linearLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Go Hunt"
            android:id="@+id/textView27"
            android:textSize="60dp"
            android:textColor="#ffff9912"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="70dp"/>

        <Button
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/button"
            android:layout_gravity="right"
            android:layout_weight="0.50"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout13"
        android:layout_alignLeft="@+id/linearLayout14"
        android:layout_alignStart="@+id/linearLayout14"
        android:id="@+id/linearLayout15"
        android:layout_alignBottom="@+id/linearLayout13"
        android:background="#ff444444">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="fill_parent">

            <ListView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/listViewGoHunters"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Hunt"
                android:id="@+id/button2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/linearLayout15"
            android:layout_alignLeft="@+id/linearLayout14"
            android:layout_alignStart="@+id/linearLayout14"
            android:weightSum="1">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:id="@+id/listViewGoTreeStands"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
