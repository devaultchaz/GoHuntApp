<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="chaz.org.myapplication.GoHuntScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout12">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout12"
        android:id="@+id/linearLayout13">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout12"
        android:layout_toEndOf="@+id/linearLayout12"
        android:layout_alignBottom="@+id/linearLayout12"
        android:weightSum="1"
        android:id="@+id/linearLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Go Hunt"
            android:id="@+id/textView27"
            android:textSize="100dp"/>

        <Button
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/button"
            android:layout_gravity="right"
            android:layout_weight="0.50"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout13"
        android:layout_alignLeft="@+id/linearLayout14"
        android:layout_alignStart="@+id/linearLayout14"
        android:id="@+id/linearLayout15">

        <ListView
            android:layout_width="426dp"
            android:layout_height="300dp"
            android:id="@+id/listView7"
            />

        <ListView
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:id="@+id/listView8"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout15"
        android:layout_alignLeft="@+id/linearLayout14"
        android:layout_alignStart="@+id/linearLayout14"
        android:weightSum="1">

        <Button
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Go Hunt"
            android:id="@+id/button2"
            android:layout_weight="0.47"
            android:textSize="30dp"/>

        <Button
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.22"
            android:textSize="30dp"
            />

    </LinearLayout>

</RelativeLayout>
