<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="chaz.org.myapplication.TreeStandScreen"
                android:background="@drawable/realtree">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/grouppicture"
            android:layout_margin="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout7"
        android:id="@+id/linearLayout8">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button23"
            android:layout_margin="3dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Go Hunt"
            android:id="@+id/button24"
            android:layout_margin="3dp"
            android:onClick="onGoClick"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/button25"
            android:layout_margin="3dp"
            android:onClick="onMapClick"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout7"
        android:layout_toEndOf="@+id/linearLayout7"
        android:layout_above="@+id/linearLayout8"
        android:id="@+id/linearLayout9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name of Treestand"
            android:id="@+id/textView11"
            android:textSize="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="60dp"
            android:textColor="#ffff9912"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout8"
        android:layout_toRightOf="@+id/linearLayout8"
        android:background="#ff444444">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="445dp"
            android:layout_height="fill_parent">

            <GridLayout
                android:layout_width="395dp"
                android:layout_height="218dp"
                android:id="@+id/gridLayout2"
                android:layout_below="@+id/linearLayout9"
                android:layout_alignLeft="@+id/linearLayout9"
                android:layout_alignStart="@+id/linearLayout9"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name:"
                    android:id="@+id/textView12"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="North-West"
                    android:id="@+id/textViewTreeStandName"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Type:"
                    android:id="@+id/textView14"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Lock-on"
                    android:id="@+id/textViewTreeStandType"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Notes:"
                    android:id="@+id/textView16"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textSize="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Check Straps"
                    android:id="@+id/textViewTreeStandNotes"
                    android:layout_row="2"
                    android:layout_column="1"/>

            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Map will go here"
                android:id="@+id/textView18"
                android:layout_marginTop="150dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
