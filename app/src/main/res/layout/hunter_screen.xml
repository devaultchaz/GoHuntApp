<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="chaz.org.myapplication.HunterScreen"
                android:background="#ff696969">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_toLeftOf="@+id/linearLayout27"
        android:layout_toStartOf="@+id/linearLayout27">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/gohuntlogo"
            android:layout_margin="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout5">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button3"
            android:onClick="onClick"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Go Hunt"
            android:id="@+id/button4"
            android:onClick="onGoClick"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/button22"
            android:onClick="onMapClick"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout4"
        android:layout_toEndOf="@+id/linearLayout4"
        android:layout_alignBottom="@+id/linearLayout4"
        android:id="@+id/linearLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Go Hunt"
            android:id="@+id/textViewName"
            android:textSize="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:textColor="#ffec773c"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_toRightOf="@+id/linearLayout5"
        android:layout_toEndOf="@+id/linearLayout5"
        android:background="#ff444444"
        android:id="@+id/linearLayout27">

        <GridLayout
            android:layout_width="500dp"
            android:layout_height="217dp"
            android:layout_alignTop="@+id/linearLayout5"
            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignStart="@+id/linearLayout6"
            android:id="@+id/gridLayout"
            android:layout_marginLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name:"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mathews Creed XS"
                android:id="@+id/textViewHuntersName"
                android:layout_row="0"
                android:layout_column="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Weapon:"
                android:id="@+id/textView5"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1falfdkjflksda"
                android:id="@+id/textViewWeapon"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Hunter"
                android:id="@+id/button31"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="onDeleteClick"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
